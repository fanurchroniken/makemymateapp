# =============================================================================
# MAKE MY MATE - ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/[YOUR-PROJECT-ID]/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# AZURE LOGIC APPS CONFIGURATION
# =============================================================================
# Get this from: Azure Portal > Logic Apps > Your App > Workflows > HTTP Trigger
LOGIC_APPS_ENDPOINT_URL=https://prod-123.westeurope.logic.azure.com:443/workflows/your-workflow-id/triggers/manual/paths/invoke?api-version=2016-10-01&sp=%2Ftriggers%2Fmanual%2Frun&sv=1.0&sig=your-signature-here

# =============================================================================
# REPLICATE CONFIGURATION
# =============================================================================
# Get this from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_your-replicate-token-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Your app's base URL (change for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
# Set to 'development', 'staging', or 'production'
NODE_ENV=development

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT secret for admin authentication (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection string (if using direct connection)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-ID].supabase.co:5432/postgres

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Supabase Storage bucket for character images
SUPABASE_STORAGE_BUCKET=character-images

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Optional: Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =============================================================================
# SOCIAL MEDIA CONFIGURATION
# =============================================================================
# For social media sharing features
NEXT_PUBLIC_SITE_NAME=Make My Mate
NEXT_PUBLIC_SITE_DESCRIPTION=Create your perfect fantasy romance character
